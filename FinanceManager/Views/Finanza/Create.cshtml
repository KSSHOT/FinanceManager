@model FinanceManager.Models.Finanza

@{
    ViewData["Title"] = "Crear Movimiento Financiero";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Crear Movimiento Financiero</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Create">
                <!-- Mostrar mensajes de error -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                <div class="form-group mb-4">
                    <label asp-for="Tipo" class="form-label fs-5">Tipo de Movimiento</label>
                    <div class="d-flex flex-wrap">
                        <div class="form-check me-3">
                            <input type="radio" asp-for="Tipo" value="Ingreso" class="form-check-input" id="tipoIngreso" />
                            <label class="form-check-label" for="tipoIngreso">Ingreso</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" asp-for="Tipo" value="Egreso" class="form-check-input" id="tipoEgreso" />
                            <label class="form-check-label" for="tipoEgreso">Egreso</label>
                        </div>
                    </div>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Monto" class="form-label fs-5">Monto</label>
                    <input asp-for="Monto" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Categoria" class="form-label fs-5">Categoría</label>
                    <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId">
                        <option value="">Selecciona una categoría</option>
                    </select>
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Descripcion" class="form-label fs-5">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Fecha" class="form-label fs-5">Fecha</label>
                    <input asp-for="Fecha" class="form-control" type="date" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>

                <div class="form-group mb-4 text-center">
                    <input type="submit" value="Agregar" class="btn btn-primary btn-lg px-4 py-2" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">Volver</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
